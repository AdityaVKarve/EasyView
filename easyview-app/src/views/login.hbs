{{#extend "content"}}
<div class="flex justify-center items-center min-h-screen bg-gray-100">

  <div class="text-center">
    <h1 class="text-3xl font-bold text-gray-900">EasySort Track</h1>
    <p class="text-gray-500 mt-2">Monitor your sorted waste, from you to new products and <br> view your environmental impact</p>
  
    <div class="mt-6 bg-white p-6 rounded-lg shadow-lg max-w-sm mx-auto">
      <button id = "signin-google" class="w-full flex items-center justify-center border py-2 px-4 rounded-lg text-gray-700 hover:bg-gray-100">
        <img src="/img/google-icon-svg.svg" alt="Google" class="w-5 h-5 mr-2"> Sign in with Google
      </button>
      <button id = "signin-microsoft" class="w-full flex items-center justify-center border py-2 px-4 rounded-lg text-gray-700 hover:bg-gray-100 mt-3">
        <img src="/img/microsoft-icon-png.png" alt="Microsoft" class="w-5 h-5 mr-2"> Sign in with Microsoft
      </button>

      <div class="my-4 flex items-center">
        <hr class="flex-grow border-gray-300">
        <span class="mx-4 text-gray-500 text-sm">OR</span>
        <hr class="flex-grow border-gray-300">
      </div>

      <button class="w-full bg-green-600 text-white py-2 px-4 rounded-lg hover:bg-green-700">Try the Demo</button>
    </div>
  </div>

</body>
</html>

<script type="text/javascript">
    document.getElementById("signin-google").onclick = function () {
        window.location.href = "/auth/google";
    };
</script>
{{/extend}}