<div class="bg-white p-4 rounded-xl shadow">
  <div class="text-2xl font-bold">{{value}}</div>
  <div class="text-sm text-gray-500">{{label}}</div>
  <div class="mt-2 text-sm font-medium {{#if (eq status "up")}}text-green-500{{else if (eq status "down")}}text-red-500{{else}}text-gray-400{{/if}}">
    {{change}} {{#if (eq status "up")}}↑{{/if}}{{#if (eq status "down")}}↓{{/if}}
  </div>
</div>